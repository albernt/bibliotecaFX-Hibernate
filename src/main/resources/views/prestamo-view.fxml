<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.PrestamoController">

    <!-- Título -->
    <Label layoutX="50" layoutY="20" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Gestión de Préstamos" />

    <!-- Campos de entrada -->
    <VBox alignment="CENTER_LEFT" layoutX="50" layoutY="60" spacing="10">
        <Label text="Socio:" />
        <TextField fx:id="socioField" promptText="Introduce el nombre o ID del socio" />

        <Label text="Libro:" />
        <TextField fx:id="libroField" promptText="Introduce el título o ID del libro" />

        <Label text="Fecha de Préstamo:" />
        <DatePicker fx:id="fechaPrestamoPicker" />

        <Label text="Fecha de Devolución:" />
        <DatePicker fx:id="fechaDevolucionPicker" />
    </VBox>

    <!-- Botones de acción -->
    <HBox layoutX="50" layoutY="220" spacing="10" />

    <!-- Tabla para mostrar los préstamos -->
    <TableView fx:id="tablaPrestamos" layoutY="320.0" prefHeight="180" prefWidth="700.0">
        <columns>
            <TableColumn fx:id="colSocio" prefWidth="169.99999487400055" text="Socio" />
            <TableColumn fx:id="colLibro" prefWidth="230.00001525878906" text="Libro" />
            <TableColumn fx:id="colFechaPrestamo" prefWidth="158.99996948242188" text="Fecha de Préstamo" />
            <TableColumn fx:id="colFechaDevolucion" prefWidth="139.6666259765625" text="Fecha de Devolución" />
        </columns>
    </TableView>

    <!-- Botón para volver -->
    <Button layoutX="600" layoutY="20" onAction="#handleVolver" text="Volver" />
     <Button layoutX="325.0" layoutY="73.0" prefHeight="37.0" prefWidth="184.0" text="Registrar Préstamo" />
     <Button layoutX="325.0" layoutY="133.0" text="Listar Préstamos Actuales" />
     <Button layoutX="325.0" layoutY="197.0" prefHeight="37.0" prefWidth="184.0" text="Ver Historial" />

</AnchorPane>
